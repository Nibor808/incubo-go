{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "api",
      "host": {
        "sourcePath": "/var/app/current/api"
      }
    },
    {
      "name": "client",
      "host": {
        "sourcePath": "/var/app/current/client"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "client",
      "image": "526452955669.dkr.ecr.ca-central-1.amazonaws.com/incubo-client:latest",
      "hostName": "client",
      "essential": false,
      "memory":128
    },
    {
      "name": "api",
      "image": "526452955669.dkr.ecr.ca-central-1.amazonaws.com/incubo-api:latest",
      "hostName": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "526452955669.dkr.ecr.ca-central-1.amazonaws.com/incubo-nginx:latest",
      "hostName": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "api"]
    }
  ]
}
