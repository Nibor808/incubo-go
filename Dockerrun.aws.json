{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "526452955669.dkr.ecr.ca-central-1.amazonaws.com/incubo-client:latest",
      "hostName": "client",
      "essential": false,
      "memory":128
    },
    {
      "name": "api",
      "image": "526452955669.dkr.ecr.ca-central-1.amazonaws.com/incubo-api:latest",
      "hostName": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "526452955669.dkr.ecr.ca-central-1.amazonaws.com/incubo-nginx:latest",
      "hostName": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        },
        {
          "hostPort": 443,
          "containerPort": 8443
        }
      ],
      "links": ["client", "api"]
    }
  ]
}
